{
  "name": "Upwork Quick Cover Letter",
  "version": "1.0",
    "manifest_version": 3,
    "description": "It will help fill cover letter in Upwork according to category.",
  
    "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png"
    },
  
    "action": {
          "default_icon": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "64": "icons/icon-64.png",
        "128": "icons/icon-128.png"
      }
    },
    "side_panel": {
      "default_path": "index.html" 
    },
  
    "permissions": ["scripting", "sidePanel", "activeTab", "storage", "tabs"],
  
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "all_frames": true,
        "run_at": "document_idle"
      }
    ],
  
    "host_permissions": ["https://www.upwork.com/*"],
  
    "web_accessible_resources": [
      {
        "resources": ["*.js", "*.css", "*.html"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  