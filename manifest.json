{
  "name": "Upwork Quick Cover Letter",
  "version": "1.0",
    "manifest_version": 3,
    "description": "It will help fill cover letter in Upwork according to category.",
  
    "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png"
    },
  
    "action": {
          "default_icon": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "64": "icons/icon-64.png",
        "128": "icons/icon-128.png"
      }
    },
    "side_panel": {
      "default_path": "index.html" 
    },
  
    "permissions": ["scripting", "sidePanel", "activeTab", "storage", "tabs", "identity"],
    "oauth2": { 
    "client_id": "261523942348-ott5o9faqt8hvjpdl6ojboifdbst6t61.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },

  
    
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "all_frames": true,
        "run_at": "document_idle"
      }
    ],
  
    "host_permissions": ["https://www.upwork.com/*", "https://chat.openai.com/*"],
  
    "web_accessible_resources": [
      {
        "resources": ["*.js", "*.css", "*.html"],
        "matches": ["<all_urls>"]
      }
    ],
    "content_security_policy": { 
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://www.googleapis.com https://securetoken.googleapis.com https://firebaseauth.googleapis.com https://firestore.googleapis.com https://identitytoolkit.googleapis.com;"
  }
  }
  